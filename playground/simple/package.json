{
  "name": "pyre-simple-playground",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "generate": "pyre generate --in pyre --out pyre/generated",
    "migrate": "pyre migrate db/app.db --push",
    "build": "tsc",
    "start": "bun run src/index.ts",
    "dev": "bun run --hot src/index.ts"
  },
  "dependencies": {
    "@libsql/client": "^0.14.0",
    "@pyre/server": "file:../../packages/server",
    "arktype": "^2.0.0-rc.32"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  }
}
