
record Game {
    @tablename "games"
    id   Int   @id
    name String

    players @link(Player.gameId)
}


record Player {
    @tablename "players"
    user  @link(userId, Base.User.id)
    games @link(gameId, Game.id)

    id     Int   @id
    userId Int
    name   String
    points Int

    gameId Int

}


record Job {
    @tablename "jobs"
    @watch
    id   Int   @id
    name String
}



