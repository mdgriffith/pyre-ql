
record Game {
    id   Int   @id
    name String

    players @link(Player.gameId)
}


record Player {
    user  @link(userId, Base.User.id)
    games @link(gameId, Game.id)

    id     Int   @id
    userId Int
    name   String
    points Int
    status Status

    gameId Int

}


record Job {
    @watch
    id   Int   @id
    name String
}



